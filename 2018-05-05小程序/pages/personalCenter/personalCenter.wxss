.ss-personalCenter-banner{height: 370rpx; width: 750rpx;}
.banner-bg{display: block; height: 370rpx; width: 750rpx;}
.ss-personalCenter-banner .con{left: 50%; top: 50%; transform: translate(-50%,-50%)}
.ss-personalCenter-banner .con .img{width: 80px; height: 80px; border-radius: 100px; background: #fff;border:3px solid #9d8fcc;overflow: hidden}
.ss-personalCenter-banner .con .img image{display: block; width: 80px; height: 80px;}
.ss-personalCenter-banner .con text{color: #fff; padding-top: 20rpx;}


.ss-rarrow{background: url('data:image/png;base64,') no-repeat right center;background-size: 44px;}
.ss-entry-list-box{background: #fff;}
.ss-entry-list-item{height: 50px; line-height: 40px;}
.ss-entry-list-item .img{width: 20px; height: 20px; display: block; margin: 15px 0}
.ss-entry-list-item .img image{width: 20px; height: 20px; display: block}
.ss-entry-list-item .font{height: 50px; line-height: 50px;}